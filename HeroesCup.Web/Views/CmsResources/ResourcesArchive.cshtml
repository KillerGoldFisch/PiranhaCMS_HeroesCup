@model HeroesCup.Web.Models.ResourcesArchive

@{
    ViewBag.Title = Model.Title;
    ViewBag.HasImage = Model.Hero.PrimaryImage.HasValue;

    //string PrimaryImage() {
    //    if (Model.Hero.PrimaryImage.HasValue) {
    //        return $"style=background-image:url({Url.Content(Model.Hero.PrimaryImage)})";
    //    } 
    //    return "";
}

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-12 vertical-center">
                <h2>От къде да започна?</h2>
                <p>Тук може да намериш всички необходими ресурси.</p>
            </div>
            <div class="col-md-6 col-sm-12">
                <img src="~/images/Resourses.svg" />
            </div>
        </div>
        <hr />

        @* Posts *@
        @if (Model.Archive.Posts.Count > 0)
        {
            <div class="row items-block">
                @foreach (var post in Model.Archive.Posts)
                {
                    <div class="col-sm-6 col-md-4">
                        <div class="item-body">
                            <a href="@post.Permalink" target="_blank">
                                <div class="row justify-content-center">
                                    @if (post.Type.Value == HeroesCup.Web.Models.Resources.ResourcePostType.PDF)
                                    {
                                        <span class="resource-icon resource-icon-pdf" />
                                    }

                                    @if (post.Type.Value == HeroesCup.Web.Models.Resources.ResourcePostType.VIDEO)
                                    {
                                        <span class="resource-icon resource-icon-video" />
                                    }

                                    @if (post.Type.Value == HeroesCup.Web.Models.Resources.ResourcePostType.COMMON)
                                    {
                                        <span class="resource-icon resource-icon-common" />
                                    }
                                </div>
                                <div class="row justify-content-center">
                                    <h4 class="item-title resource-title">@post.Title</h4>
                                    <p>@post.Hero.IngressTitle.Value</p>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }

        <hr />
        <partial name="~/Views/Shared/Partial/_Challenge.cshtml" for="@Model.Title" />
    </div>
</div>
